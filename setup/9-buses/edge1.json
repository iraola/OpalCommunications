{
    "global-properties":{
        "label": "edge1",
        "udp-sensors": 2,
        "comms":{
            "opal-udp": {
                "protocol": "udp",
                "sensors": {
                    "ip": "0.0.0.0",
                    "port": "21002"
                }
            },
            "opal-tcp": {
                "protocol": "tcp",
                "sensors": {
                    "ip": "0.0.0.0",
                    "port": "11002"
                },
                "actuators": {
                    "ip": "$LOCAL_IP",
                    "port": "31002"
                }
            }
        },
        "funcs": {
            "all-sensors": [
                {
                    "label": "AMQPPublish",
                    "lang": "Java",
                    "method-name": "es.bsc.hp2c.edge.funcs.AmqpPublish",
                    "parameters": {
                        "sensors": ["ALL"],
                        "actuators": [],
                        "other": []
                    },
                    "trigger": {
                        "type": "onRead",
                        "parameters": ["ALL"]
                    }
                }
            ]
        }
    },

    "devices": [
        {
            "label": "Ammeter Gen1",
            "driver": "es.bsc.hp2c.edge.opalrt.OpalAmmeter",
            "position": {
                "x":20,
                "y":40
            },

            "properties": {
                "comm-type": "opal-udp",
                "indexes": [0]
            }
        },
        {
            "label": "Three-Phase Switch CB1",
            "driver": "es.bsc.hp2c.edge.opalrt.OpalSwitch",
            "position": {
                "x":0,
                "y":0
            },
            "properties": {
                "comm-type": "opal-tcp",
                "indexes": [0,1,2]
            }
        },
        {
            "label": "Voltmeter Gen1",
            "driver": "es.bsc.hp2c.edge.opalrt.OpalVoltmeter",
            "position": {
                "x":20,
                "y":40
            },
            "properties": {
                "comm-type": "opal-udp",
                "indexes": [1]
            }
        },
        {
            "label": "Generator SM1",
            "driver": "es.bsc.hp2c.edge.opalrt.OpalGenerator",
            "position": {
                "x":0,
                "y":0
            },
            "properties": {
                "comm-type": "opal-tcp",
                "indexes": [3,4]
            }
        }
    ],

    "funcs":[
        {
            "label": "VoltLimitation",
            "lang": "Java",
            "method-name": "es.bsc.hp2c.edge.funcs.VoltLimitation",
            "parameters": {
                "sensors": ["Voltmeter Gen1"],
                "actuators": ["Three-Phase Switch Gen1"],
                "other": [200]
            },
                        "trigger": {
                "type": "onRead", 
                "method-name": "es.bsc.hp2c.edge.HP2Cedge.onRead",
                "parameters": ["Voltmeter Gen1"]
            }

        },
        {
            "label": "CalcPower",
            "lang": "Python",
            "method-name": "es.bsc.hp2c.edge.funcs.CalcPower",
            "parameters": {
                "sensors": ["Voltmeter Gen1", "Ammeter Gen1"],
                "actuators": [],
                "other": []
            },
            "trigger": {
                "type": "onFrequency",
                "method-name": "es.bsc.hp2c.edge.HP2Cedge.onFrequency",
                "parameters": [10] 
            }
        }
    ]
}
